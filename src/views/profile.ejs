<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%- include('partials/header', {userId, page:'profile'}) %>
        <main>
            <article class="user-img user-data">
                <img alt="Imagen de perfil" src="<%= userData.user.user_pfp %>">
            </article>
            <section class="user-data">
                <span>
                    <%= userData.user.user_username %>
                </span>
                <br>
                <span>
                    <%= userData.user.user_name %>
                        <%= userData.user.user_last_name %>
                </span>
            </section>

            <h1>Recetas de <%= userData.user.user_username %>
            </h1>

            <section class="recipes">
                <ul>
                    <% userData.recipes.forEach((recipe, index) => { %>
                        <li>
                            <a href="/recipe/view/<%= recipe.recipe_id %>">
                                <img src="<%= recipe.recipe_img[0] %>" class="recipe" alt="Imagen de la receta <%= recipe.recipe_id %>">
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </section>
        </main>
</body>

</html>
<style>
    html {
        font-size: 16px;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        height: 100dvh;
        width: 100dvw;
        overflow-x: hidden;
    }

    main {
        width: 98%;
        min-height: 100%;
        margin: 0 auto;
        background: green;
    }

    article.user-img {
        width: 50%;
        border-radius: 50%;
        background: red;
        aspect-ratio: 1;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        object-fit: contain;
        overflow: hidden;
    }

    article img {
        display: inline-block;
        width: 100%;
        height: 100%;
    }

    section.user-data {
        width: 96%;
        height: auto;
        background: blue;
        margin: 0.5rem auto;
        padding: 0.5rem;
    }

    section.recipes {
        width: 96%;
        min-height: 10rem;
        background: rgb(0, 255, 213);
        margin: 0.5rem auto;
        padding: 0.5rem;

        & a {
            display: flex;
            flex-direction: column;
        }
    }

    h1 {
        font-size: 2rem;
    }

    img.recipe {
        aspect-ratio: 16/9;
        width: 400px;
        object-fit: cover;
    }
</style>