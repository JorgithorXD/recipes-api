<header>
    <nav>
        <% if(page != 'index') {%>
            <a class="header" href="/">Volver al inicio</a>
        <%}%>
        <% if(userId === undefined && page != 'profile') {%>
            <a class="header" href="/api/v1/user/view/form/login">Iniciar sesion</a>
            <a class="header" href="/api/v1/user/view/form/register">Registrarse</a>
        <%}  if (userId != undefined && page != 'profile') {%>
            <a class="profile header" href="/api/v1/user/view/profile/<%= userId %>">Perfil</a>
        <%}  if (page === 'profile' && userId != undefined) {%>
            <form action="/api/v1/user/profile/close" method="post">
                <input type="submit" class="profile-close header" value="Cerrar sesion">
            </form>
        <%}%>
    </nav>
</header>

<style>
    * {
        box-sizing: border-box;
        font-size: 16px;
        border: 0;
        margin: 0;
    }

    a.header, .profile-close {
        text-decoration: none;
        color: white;
        font-size: 1.5rem;
        padding: 0.5rem 1rem;
        margin: 0 0 0 0.25rem;
    }

    a.profile {
        font-size: 2rem;
    }

    .profile-close {
        font-size: 1.5rem;
        background: none;
    }

    a.header:hover, .profile-close:hover {
        background: #303030;
        border-radius: 0.5rem;
        transition: background 0.3s ease-in-out
    }

    header {
        height: 5rem;
        background-color: black;
        display: flex;
        align-items: center;
        justify-content: end;
        margin: 0 0 1.5rem 0;
    }

    nav {
        width: 100%;
        margin-inline: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
</style>